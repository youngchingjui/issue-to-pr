{
  "plugins": ["simple-import-sort"],
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier",
    "plugin:react-hooks/recommended-legacy"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-unused-vars": "off",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}

{
  "plugins": ["@typescript-eslint", "simple-import-sort", "import"],
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:react-hooks/recommended-legacy",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^.*$",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-unused-vars": "off",
    "simple-import-sort/imports": "warn",
    "simple-import-sort/exports": "warn",
    "import/no-restricted-paths": [
      "warn",
      {
        "zones": [
          {
            "target": "./shared/src/lib/**",
            "from": "./shared/src/adapters/**",
            "message": "Business logic layer (/lib) should not import from adapters layer (/adapters)"
          },
          {
            "target": "./shared/src/lib/**",
            "from": "./apps/**",
            "message": "Business logic layer (/lib) should not import from apps layer (/apps)"
          },
          {
            "target": "./shared/src/adapters/**",
            "from": "./shared/src/lib/**",
            "message": "Adapters layer (/adapters) should not import from business logic layer (/lib)"
          },
          {
            "target": "./shared/src/adapters/**",
            "from": "./apps/**",
            "message": "Adapters layer (/adapters) should not import from apps layer (/apps)"
          },
          {
            "target": "./shared/src/core/**",
            "from": "./shared/src/lib/**",
            "message": "Core layer (/core) should not import from business logic layer (/lib)"
          },
          {
            "target": "./shared/src/core/**",
            "from": "./shared/src/adapters/**",
            "message": "Core layer (/core) should not import from adapters layer (/adapters)"
          },
          {
            "target": "./shared/src/core/**",
            "from": "./apps/**",
            "message": "Core layer (/core) should not import from apps layer (/apps)"
          }
        ]
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "./tsconfig.json",
          "./shared/tsconfig.json",
          "./apps/worker/tsconfig.json"
        ]
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}

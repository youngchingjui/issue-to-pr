{
  "compilerOptions": {
    /* Modules - leave this to the individual projects */

    /* Emit - leave this to the individual projects */

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* JS support */
    "allowJs": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,

    /* Language & Environment */
    "target": "ES2022",
    "lib": ["es2022"],
    "jsx": "preserve",

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"],
      "@shared/*": ["shared/src/*"],
      "@workers/*": ["apps/workers/src/*"]
    },

    /* Incremental */
    "incremental": true
  },
  "exclude": ["node_modules"]
}

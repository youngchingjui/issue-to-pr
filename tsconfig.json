// tsconfig for NextJS app
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/*": ["./*"]
    },
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "noEmit": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "composite": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "components/**/*",
    "styles/**/*",
    "lib/**/*",
    "middleware.ts"
  ],
  "exclude": [
    "node_modules",
    "apps/worker/**/*",
    "shared/**/*",
    "__tests__/**/*",
    "scripts/**/*"
  ]
}

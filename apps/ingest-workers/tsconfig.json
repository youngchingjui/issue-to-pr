{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../shared/src/*"],
      "@lib/*": ["../../lib/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


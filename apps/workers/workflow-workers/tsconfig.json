{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    /* Make @/<...> resolve to this package's src like in Next.js apps */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Emit */
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,

    /* Modules */
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


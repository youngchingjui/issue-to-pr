{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@shared/*": ["../../../shared/src/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "bundler",

    "incremental": false // Turn to false when testing out new config.
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../../../shared"
    }
  ]
}

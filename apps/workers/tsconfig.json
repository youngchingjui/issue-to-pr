{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../shared/src/*"]
    },
    "outDir": "./dist",
    "noEmit": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
